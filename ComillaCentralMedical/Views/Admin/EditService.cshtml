@model ComillaCentralMedical.Models.Service

@{
    ViewBag.Title = "Edit Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="form-container">
        <h2 class="text-center mb-4">Edit Service</h2>
        @using (Html.BeginForm("EditService", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ServiceID)

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="form-group">
                @Html.LabelFor(model => model.ServiceName, "Service Name")
                @Html.TextBoxFor(model => model.ServiceName, new { @class = "form-control", placeholder = "Enter service name" })
                @Html.ValidationMessageFor(model => model.ServiceName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UnitCost, "Unit Cost")
                @Html.TextBoxFor(model => model.UnitCost, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Enter unit cost" })
                @Html.ValidationMessageFor(model => model.UnitCost, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UnitType, "Unit Type")
                @Html.DropDownListFor(model => model.UnitType, new SelectList(new[] { "Per Day", "Per Visit", "Per Test", "Per Surgery" }, Model.UnitType), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UnitType, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Category, "Category")
                @Html.TextBoxFor(model => model.Category, new { @class = "form-control", placeholder = "Enter category (e.g., Consultation, Surgery)" })
                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DiscountRate, "Discount Rate")
                @Html.TextBoxFor(model => model.DiscountRate, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Enter discount rate" })
                @Html.ValidationMessageFor(model => model.DiscountRate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsAvailable, "Available")
                <div class="form-check">
                    @Html.CheckBoxFor(model => model.IsAvailable, new { @class = "form-check-input" })
                    @Html.LabelFor(model => model.IsAvailable, "Yes", new { @class = "form-check-label" })
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                <a href="@Url.Action("ManageServices", "Admin")" class="btn btn-warning px-4">Cancel</a>
            </div>
        }
    </div>
</div>

<style>
    .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .form-group label {
            flex: 0 0 25%; 
            text-align: right;
            margin-right: 10px;
            font-weight: bold;
        }

        .form-group .form-control,
        .form-group .form-check-input {
            flex: 1; 
        }

    .form-check-label {
        margin-left: 10px; 
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .btn {
        margin: 10px 5px;
    }
</style>

