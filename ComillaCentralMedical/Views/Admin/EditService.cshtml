@model ComillaCentralMedical.Models.Service

@{
    ViewBag.Title = "Edit Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-white text-center">
                    <h4>Edit Service</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("EditService", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ServiceID) <!-- Hidden field to store the ID -->

                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.ServiceName, "Service Name", new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.ServiceName, new { @class = "form-control", placeholder = "Enter service name" })
                            @Html.ValidationMessageFor(model => model.ServiceName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.UnitCost, "Unit Cost", new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.UnitCost, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Enter unit cost" })
                            @Html.ValidationMessageFor(model => model.UnitCost, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.UnitType, "Unit Type", new { @class = "form-label" })
                            @Html.DropDownListFor(model => model.UnitType, new SelectList(new[] { "Per Day", "Per Visit", "Per Test", "Per Surgery" }, Model.UnitType), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UnitType, "", new { @class = "text-danger" })
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                            <a href="@Url.Action("ManageServices", "Admin")" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
