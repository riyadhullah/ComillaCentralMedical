@model ComillaCentralMedical.Models.Service

@{
    ViewBag.Title = "Delete Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Delete Service</h4>
                </div>
                <div class="card-body text-center">
                    <p class="text-danger">Are you sure you want to delete this service?</p>
                    <h5>@Model.ServiceName</h5>
                    <p>Unit Cost: @Model.UnitCost</p>
                    <p>Unit Type: @Model.UnitType</p>

                    @using (Html.BeginForm("DeleteService", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ServiceID)

                        <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                        <a href="@Url.Action("ManageServices", "Admin")" class="btn btn-secondary px-4">Cancel</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
