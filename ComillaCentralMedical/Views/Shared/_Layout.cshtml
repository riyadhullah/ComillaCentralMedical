<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Comilla Central Medical</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Navbar customizations */
        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            letter-spacing: 1px;
        }

        .nav-link {
            font-weight: 600;
            font-size: 1.05rem;
            transition: color 0.3s ease;
        }

            .nav-link:hover, .nav-link:focus {
                color: #ff6f61 !important;
                text-decoration: underline;
            }

        /* Footer */
        footer {
            background-color: #f8f9fa;
            font-size: 0.9rem;
            color: #555;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Comilla Central Medical</a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (Session["UserId"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Logout">Logout (@Session["FullName"])</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="container my-5">
        @RenderBody()
    </main>

    <footer class="py-3 text-center">
        <div class="container">
            &copy; @DateTime.Now.Year Comilla Central Medical.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
